<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EMarketCase" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/main_blue</item>

    </style>

    <style name="Theme.EMarketCase" parent="Base.Theme.EMarketCase" />

    <style name="BottomNavigationView.TextHidden" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconSize">24dp</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.BottomNavigationView.IconOnly
        </item>
        <item name="itemTextAppearanceInactive">
            @style/TextAppearance.BottomNavigationView.IconOnly
        </item>
    </style>

    <style name="TextAppearance.BottomNavigationView.IconOnly" parent="TextAppearance.AppCompat.Caption">
        <item name="android:visibility">gone</item>
    </style>

    <!-- Shadow for the divider line -->
    <style name="DividerShadow">
        <item name="android:background">@drawable/shadow</item>
    </style>
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/main_blue</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>